{
  "name": "ollama-ui-chrome-extension",
  "private": true,
  "version": "0.3.0",
  "type": "module",
  "scripts": {
    "start": "concurrently \"npm run vite\" \"npm run ollama\"",
    "dev": "concurrently -n StopOLLAMA,OLLAMA,VITE -c magenta,blue,green \"yarn stop-ollama\" \"yarn ollama\" \"yarn vite\"",
    "vite": "vite",
    "ollama": "cross-env OLLAMA_ORIGINS=chrome-extension://* ollama serve",
    "stop-ollama": "pkill -f 'ollama serve' || echo 'Ollama is not running.'",
    "build": "vite build"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@fvilers/disable-react-devtools": "^1.3.0",
    "@mui/core": "^5.0.0-alpha.54",
    "@mui/icons-material": "^7.0.2",
    "@mui/material": "^7.0.2",
    "@mui/utils": "^7.0.2",
    "axios": "^1.8.4",
    "markdown-to-jsx": "^7.7.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-loader-spinner": "^6.1.6",
    "react-router-dom": "^7.5.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "vite": "^6.2.0"
  }
}
